<Window x:Class="AreaCodeGuessrVS22.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AreaCodeGuessrVS22"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="750"
        Style="{DynamicResource CustomWindowStyle}">
    <StackPanel>
        <StackPanel>
        <Label FontWeight="Bold" FontSize="24pt">AreaCodeGuessr {version}</Label>
        <RadioButton GroupName="modeRadios" FontSize="12pt" Padding="5,5,5,5">Normal mode</RadioButton>
        <RadioButton GroupName="modeRadios" FontSize="12pt" IsChecked="True" Padding="5,5,5,5">One areacode mode</RadioButton>
        </StackPanel>
        <StackPanel Margin="0,10,0,0">
        <ListView Name="YourListBox" Height="100">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="125">Select Number series</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        </StackPanel>
    </StackPanel>
        
</Window>
